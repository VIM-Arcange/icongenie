#!/usr/bin/env node

const parseArgs = require('minimist')

const argv = parseArgs(process.argv.slice(2), {
  alias: {
    h: 'help'
  },
  boolean: ['h']
})

if (argv.help) {
  console.log(`
  Description
    Displays information about your Quasar App's icons.

  Usage
    $ icon-genie info

  Options
    --help, -h     Displays this message
  `)
  process.exit(0)
}

const appPaths = require('../lib/app-paths')

console.log()
